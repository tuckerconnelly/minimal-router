{
  "name": "@tuckerconnelly/minimal-router",
  "version": "0.0.4",
  "description": "Route using open API specification",
  "repository": "https://github.com/tuckerconnelly/minimal-router",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "DEBUG=minimal-router jest --testPathIgnorePatterns=routes",
    "prettier": "prettier --write 'src/**/*.js'",
    "lint": "eslint 'src/**/*.js'"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "glob": "^7.1.4",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "test-listen": "^1.1.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": 0
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "npm run prettier -- ",
        "npm run lint -- ",
        "git add"
      ]
    }
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "tmp",
      "json"
    ],
    "forceExit": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm ci"
    }
  }
}
